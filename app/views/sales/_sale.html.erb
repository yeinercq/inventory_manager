<div class="mt-2">
  <div class="card shadow-sm">
    <div class="card-body">
        <div class="row align-items-center">
          <div class="col-12 col-md-4">
            <div class="col">
              <%= link_to sale.code, sale_path(sale) %>
            </div>
            <div class="col">
              <span class="sale-status sale-status__<%= sale.status %>"><%= sale.status %></span>
            </div>
          </div>
          <div class="col-12 col-md-3">
            Client: <%= sale.client.name %>
          </div>
          <div class="col-12 col-md-3">
            <% if sale.total.present? %>
            Total: <%= number_to_currency sale.total %>
            <% end %>
          </div>
          <% if sale.recorded? %>
            <div class="col-12 col-md-2">
              <%= link_to edit_sale_path(sale) do %>
              <div class="btn btn-info">
                <i class="bi bi-pencil-square"></i>
              </div>
              <% end %>
              <%= link_to sale_path(sale), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
              <div class="btn btn-danger">
                <i class="bi bi-trash"></i>
              </div>
              <% end %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
