<%= turbo_frame_tag product, class: "col-md-3 mt-3" do %>
  <div class="card shadow">
    <img src="https://www.ciamsa.com/es/wp-content/uploads/2017/10/11-52-0-208x300.png" class="card-img-top" alt="abono">
    <div class="card-body">
      <h4 class="card-title">
        <% if user_signed_in? %>
          <%= link_to product.name, product_path(product), data: { turbo_frame: '_top' } %>
        <% else %>
          <%= product.name %>
        <% end %>
      </h4>
      <p class="card-text">
        <table>
          <% if !product.sale_price.nil? %>
            <tr>
              <td><%= t('products.sale_price') %>: <b><%= number_to_currency product.sale_price.price %></b></td>
            </tr>
          <% end %>
          <tr>
            <td><%= t('products.brand') %>: <%= product.brand %></td>
          </tr>
          <tr>
            <td><%= t('products.unit') %>: <%= product.unit %></td>
          </tr>
          <tr>
            <td><%= t('products.size') %>: <%= product.size %></td>
          </tr>
          <tr>
            <td><%= t('products.stock') %>: <%= product.current_stock %></td>
          </tr>
        </table>
      </p>
      <% if user_signed_in? %>
      <div class="row align-items-center justify-content-center">
        <div class="col-2">
          <%= link_to edit_product_path(product), data: { turbo_frame: '_top' } do %>
          <div class="btn btn-info">
            <i class="bi bi-pencil-square"></i>
          </div>
          <% end %>
        </div>
        <div class="col-2 ms-3">
          <%= link_to product_path(product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <div class="btn btn-danger">
            <i class="bi bi-trash"></i>
          </div>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
