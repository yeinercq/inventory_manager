<div class="container">
  <%= link_to sanitize("&larr; Back to products"), products_path %>
  <div class="card mt-4">
    <div class="card-header">
      <div class="row align-items-center">
        <div class="col-12 col-md-8">
          <h2><%= @product.name %></h2>
        </div>
        <% if !@product.sale_price.nil? %>
          <div class="col-12 col-md-2">
            <h4>Sale price: <%= number_to_currency @product.sale_price.price %></h4>
          </div>
          <div class="col-12 col-md-2">
            <%= link_to "Edit sale price", edit_product_sale_price_path(@product), class: "btn btn-primary" %>
          </div>
        <% else %>
          <div class="col-12 col-md-4">
            <%= link_to "New sale price", new_product_sale_price_path(@product), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <th>Name</th>
          <th>Brand</th>
          <th>Unit</th>
          <th>Size</th>
          <th>Provider</th>
        </thead>
        <tbody>
          <tr>
            <td><%= @product.name %></td>
            <td><%= @product.brand %></td>
            <td><%= @product.unit %></td>
            <td><%= @product.size %></td>
            <td><%= @product.provider.name %></td>
          </tr>
        </tbody>
      </table>
      <div class="row mt-4">
        Description:
        <div class="col">
          <div class="card card-body">
            <td><%= simple_format @product.description %></td
          </div>
        </div>
      </div>
      <div class="row justify-content-center mt-2">
        <div class="col-12 col-sm-4 d-grid mt-2">
          <%= link_to "Edit", edit_product_path(@product), class: "btn btn-secondary" %>
        </div>
        <div class="col-12 col-sm-4 d-grid mt-2">
          <%= link_to "Movement", new_product_movement_path(@product), data: { turbo_frame: dom_id(Movement.new) }, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= turbo_frame_tag Movement.new %>
<%= turbo_frame_tag "product-movements" do %>
  <%= render 'products/movements', product: @product %>
<% end %>
