<%= simple_form_for [wallet, transaction] do |f| %>
  <%= form_error_notification(transaction) %>

  <%= f.hidden_field :transaction_type, value: "withdraw" %>
  <%= f.input :amount, label: "Cantidad", input_html: { autofocus: true, class: 'form-control' } %>

  <%= f.submit class: "btn btn-warning my-2" %>

<% end %>
