<%= simple_form_for general_setting do |f| %>
  <%= form_error_notification(general_setting) %>

  <%= f.input :base_seco_coffee_price, label: "Precio base para cafe seco (carga)", class: "form-control" %>
  <%= f.input :base_verde_coffee_price, label: "Precio base para cafe verde (carga)", class: "form-control" %>
  <%= f.input :base_pasilla_coffee_price, label: "Precio por punto de pasilla", class: "form-control" %>

  <%= f.input :sample_seco_weight_quantity, label: "Muestra para cafe seco (gramos)", class: "form-control" %>
  <%= f.input :sample_verde_weight_quantity, label: "Muestra para cafe verde (gramos)", class: "form-control" %>
  <%= f.input :sample_pasilla_weight_quantity, label: "Muestra para pasilla (gramos)", class: "form-control" %>
  <%= f.input :destare_quantity, label: "Destare por tula (gramos)", class: "form-control" %>

  <%= f.submit class: "btn btn-warning mt-2" %>
<% end %>
