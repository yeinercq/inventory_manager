<%= simple_form_for export do |f| %>
  <%= form_error_notification(export) %>

  <%= f.input :key, label: t('exports.model'), as: :select, collection: Export.valid_keys, input_html: { autofocus: true, class: 'form-select' } %>

  <%= f.fields_for :data_filters do |ff| %>

    <%= ff.label t('common.start_date') %>
    <%= ff.date_field :start_date, class: 'form-control' %>

    <%= ff.label t('common.end_date') %>
    <%= ff.date_field :end_date, class: 'form-control' %>

  <% end %>

  <%= f.submit t('common.generate'), class: "btn btn-warning my-2"%>
<% end %>
