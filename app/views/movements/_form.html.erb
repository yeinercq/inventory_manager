<%= simple_form_for [product, movement], html: { class: "form" } do |f| %>
  <%= form_error_notification(movement) %>

  <div class="form-inputs">
    <div class="row align-movements-end">
      <div class="col-12 col-sm-3">
        <%= f.input :mov_type, label: t('.movement'), as: :select, collection: Movement.mov_types, value_method: -> (r) { r[0] } %>
      </div>
      <div class="col-12 col-sm-3">
        <%= f.input :mov_sub_type, label: t('.class'), as: :select, collection: Movement.mov_sub_types, value_method: -> (r) { r[0] } %>
      </div>
      <div class="col-12 col-sm-3">
        <%= f.input :quantity, label: t('.quantity') %>
      </div>
      <div class="col-12 col-sm-3">
        <%= f.input :unit_price, label: t('.price') %>
      </div>
    </div>
    <div class="col-12 col-sm-3 form-actions">
      <%= link_to product_path(product) do %>
        <div class="btn btn-info">
          <i class="bi bi-x-lg"></i>
        </div>
      <% end %>
      <%= f.submit class: "btn btn-warning" %>
    </div>
  </div>

<% end %>
