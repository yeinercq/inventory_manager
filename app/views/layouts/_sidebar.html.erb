<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvas" data-bs-keyboard="false" data-bs-backdrop="true">
  <div class="offcanvas-header">
    <h3 class="offcanvas-title d-none d-sm-block" id="offcanvas">
      <%= current_company.name %>
    </h3>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <hr>
  <div class="offcanvas-body px-0">
    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-start" id="menu">
      <li class="nav-item">
        <%= link_to wallets_path, class: "nav-link text-truncate" do %>
          <i class="bi bi-wallet2"></i><span class="ms-1 d-none d-sm-inline">Billeteras</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to coffee_purchases_path, class: "nav-link text-truncate" do %>
          <i class="bi bi-cup-hot-fill"></i><span class="ms-1 d-none d-sm-inline">Compra de cafe</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to sales_path, class: "nav-link text-truncate" do %>
          <i class="bi bi-receipt"></i><span class="ms-1 d-none d-sm-inline">Ventas</span>
        <% end %>
      </li>
      <li>
        <%= link_to products_path, class: "nav-link text-truncate" do %>
          <i class="bi bi-grid-1x2-fill"></i><span class="ms-1 d-none d-sm-inline">Productos</span>
        <% end %>
      </li>
      <li>
        <%= link_to categories_path, class: "nav-link text-truncate" do %>
          <i class="bi bi-bookmarks-fill"></i><span class="ms-1 d-none d-sm-inline">Categorias</span>
        <% end %>
      </li>
      <li>
        <%= link_to customers_path, class: "nav-link text-truncate" do %>
          <i class="bi bi-person-vcard-fill"></i><span class="ms-1 d-none d-sm-inline">Clientes</span>
        <% end %>
      </li>
      <li>
        <%= link_to providers_path, class: "nav-link text-truncate" do %>
          <i class="bi bi-box-seam-fill"></i><span class="ms-1 d-none d-sm-inline">Proveedores</span>
        <% end %>
      </li>
      <li>
        <%= link_to exports_path, class: "nav-link text-truncate" do %>
          <i class="bi bi-bar-chart-fill"></i></i><span class="ms-1 d-none d-sm-inline">Reportes</span>
        <% end %>
      </li>
    </ul>

    <div class="offcanvas-footer">
      <div class="dropdown">
        <a href="#" class="btn btn-light dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
          <% unless current_user.profile.nil? %>
            <%= image_tag (current_user.profile.picture.url), class: "offcanvas-footer__user-photo" if current_user.profile.picture? %>
          <% end %>
          <strong class="d-none d-md-inline"><%= current_user.name %></strong>
        </a>
        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
          <div class="dropdown-item small text-right">
            <%= current_user.email %>
          </div>
          <hr class="dropdown-divider">
          <% if current_user.profile.nil? %>
            <%= link_to new_profile_path, class: 'dropdown-item' do %>
              Perfil
            <% end %>
          <% else %>
            <%= link_to profile_path, class: 'dropdown-item' do %>
              Perfil
            <% end %>
          <% end %>
          <%= link_to edit_user_registration_path, class: 'dropdown-item' do %>
            Cambiar contrasena
          <% end %>
          <%= link_to destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: t('common.are_you_sure') }, class: 'dropdown-item' do %>
            Cerrar sesion
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
