<nav id="navbar" class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
  <% if user_signed_in? %>
    <div class="container-fluid">
      <div class="navbar__brand">
        <%= current_company.name %>
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <%= link_to t('sales.plural'), sales_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t('products.plural'), products_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t('categories.plural'), categories_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t('customers.plural'), customers_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t('providers.plural'), providers_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
      <div class="navbar__name">
        <div class="dropdown dropdown-user">
          <button class="btn btn-dark dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
            <%= current_user.name %>
          </button>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
            <div class="dropdown-item small text-right">
              <%= current_user.email %>
            </div>
            <hr class="dropdown-divider">
            <% if current_user.profile.nil? %>
              <%= link_to new_profile_path, class: 'dropdown-item' do %>
              Profile
              <% end %>
            <% else %>
              <%= link_to profile_path, class: 'dropdown-item' do %>
              Profile
              <% end %>
            <% end %>
            <%= link_to edit_user_registration_path, class: 'dropdown-item' do %>
              Change password
            <% end %>
            <%= link_to destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: t('common.are_you_sure') }, class: 'dropdown-item' do %>
              Cerrar sesion
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% else %>
  <div class="container-fluid">
    <div class="navbar__brand">
      <%= link_to root_path do %>
        <%= image_tag 'logo_letras.png' %>
      <% end %>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to t('common.home'), '#carousel', class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Fertilizantes", "#fertilizers", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Ubíquenos", "#ubication", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Nuestro equipo", "#team", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contáctenos", "#contact", class: "nav-link" %>
        </li>
      </ul>
    </div>
  </div>
  <% end %>
</nav>
